{
    "extends": [
        "stylelint-config-standard",
        "stylelint-config-rational-order",
        "stylelint-prettier/recommended"
    ],
    "plugins": [
        "stylelint-order",
        "stylelint-scss"
    ],
    "rules": {
        "at-rule-no-unknown": null,
        "selector-class-pattern": null,
        "prettier/prettier": [
            true,
            {
                "endOfLine": "auto"
            }
        ]
    }
}